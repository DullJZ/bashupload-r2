# Cloudflare R2 配置 (通过 S3 API 访问)
# 在 Cloudflare 控制台中创建 R2 API Token 获取以下信息
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key_id
R2_SECRET_ACCESS_KEY=your_secret_access_key
R2_BUCKET_NAME=your_bucket_name

# 应用配置
# 最大上传大小（字节），默认 5GB
MAX_UPLOAD_SIZE=5368709120

# 文件最大保存时间（秒），默认 1 小时
MAX_AGE=3600

# 多次下载模式下的最大保存时间（秒），默认 24 小时
MAX_AGE_FOR_MULTIDOWNLOAD=86400

# 是否启用短链接，默认 false
ENABLE_SHORT_URL=false

# 是否允许超过 MAX_AGE 的过期时间，默认 false
ALLOW_LIFETIME_OVER_MAX_AGE=false

# 上传密码保护（可选）
# PASSWORD=your_secure_password

# 短链接服务地址（可选）
SHORT_URL_SERVICE=https://suosuo.de/short

# Node.js 环境
NODE_ENV=production

# 服务端口
PORT=3000
